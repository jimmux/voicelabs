<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/game_layout_phoneme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_wash" >

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="#99999999"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/buttonMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@android:color/transparent"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/btn_menu_go" />

        <ImageButton
            android:id="@+id/buttonSkip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="700dp"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:paddingTop="50dp"
            android:src="@drawable/btn_skip" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_game1_l"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonRecord"
        android:layout_alignTop="@+id/buttonRecord"
        android:layout_marginTop="63dp"
        android:text="LLLL..."
        android:textColor="#fff"
        android:textSize="60sp"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/buttonRecord"
        android:layout_marginRight="51dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/anim_btn_play0001"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/buttonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/anim_leo_hand_to_ear0001"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/buttonRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonStart"
        android:layout_marginTop="45dp"
        android:layout_toRightOf="@+id/buttonStart"
        android:background="@drawable/anim_btn_speak0001"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:visibility="invisible" />

</RelativeLayout>