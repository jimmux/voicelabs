<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_wash" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="#aaaaaaaa"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/buttonMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@android:color/transparent"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/btn_menu_go" />

        <ImageButton
            android:id="@+id/buttonSkip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="700dp"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:paddingTop="50dp"
            android:src="@drawable/btn_skip" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonLeo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:translationY="50dp"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:background="@drawable/anim_leo_justblink0001"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/btn_lamb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/img_obj_lemon"
        android:scaleX="0.5"
        android:scaleY="0.5" />

    <ImageButton
        android:id="@+id/btn_leg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@drawable/img_obj_lemon"
        android:scaleX="0.5"
        android:scaleY="0.5" />



    <ImageButton
        android:id="@+id/btn_lemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/linearLayout1"
        android:background="@drawable/img_obj_lemon"
        android:scaleX="0.5"
        android:scaleY="0.5" />

    <ImageButton
        android:id="@+id/btn_lettuce"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/buttonRecord"
        android:layout_marginTop="18dp"
        android:background="@drawable/img_obj_lemon"
        android:scaleX="0.5"
        android:scaleY="0.5" />



    <ImageButton
        android:id="@+id/btn_play1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_lemon"
        android:layout_marginTop="21dp"
        android:layout_toLeftOf="@+id/buttonLeo"
        android:background="@drawable/anim_btn_play0004"
        android:minHeight="170dp"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/btn_play3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_play1"
        android:layout_below="@+id/btn_lemon"
        android:background="@drawable/anim_btn_play0004"
        android:minHeight="170dp"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btn_play4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btn_lettuce"
        android:layout_alignLeft="@+id/btn_play2"
        android:background="@drawable/anim_btn_play0004"
        android:minHeight="170dp"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/btn_play2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_play1"
        android:layout_toRightOf="@+id/buttonLeo"
        android:background="@drawable/anim_btn_play0004"
        android:minHeight="170dp"
        android:scaleX="0.4"
        android:scaleY="0.4"
        android:visibility="invisible" />

    <ImageButton
        android:id="@+id/buttonRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/buttonLeo"
        android:layout_below="@+id/linearLayout1"
        android:layout_marginRight="51dp"
        android:background="@drawable/anim_btn_speak0001"
        android:minHeight="170dp"
        android:scaleX="0.6"
        android:scaleY="0.6"
        android:visibility="visible" />

</RelativeLayout>