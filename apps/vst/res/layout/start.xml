<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/anim_splash0059" >

    <ImageView
        android:id="@+id/leo_fade_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/anim_leo_justblink0005"
        android:scaleType="center"
        android:translationY="20dp" />

    <TextView
        android:id="@+id/txt_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Friends"
        android:textColor="#fff"
        android:textSize="80sp" />

    <TextView
        android:id="@+id/txt_phoneme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/obj_sun"
        android:layout_centerHorizontal="true"
        android:text="Phoneme"
        android:textColor="#fff"
        android:textSize="100sp" />

    <ImageView
        android:id="@+id/obj_sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_friends"
        android:layout_marginBottom="19dp"
        android:background="@drawable/img_obj_sun" />

    <Button
        android:id="@+id/buttonGoToSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/transparent"
        android:text="Settings"
        android:textColor="#FFF" />

    <ImageButton
        android:id="@+id/imageButtonStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonGoToSettings"
        android:layout_centerHorizontal="true"
        android:background="@drawable/btn_start"
        android:contentDescription="@string/start_button"
        android:visibility="visible" />

</RelativeLayout>