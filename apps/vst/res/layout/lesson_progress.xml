<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_progress" >

    <ImageButton
        android:id="@+id/imageButtonWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="126dp"
        android:layout_toLeftOf="@+id/imageButtonChoose"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_circle_red0018" />

    <ImageButton
        android:id="@+id/imageButtonChoose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageButtonWord"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_circle_red0018" />

    <ImageButton
        android:id="@+id/imageButtonPhoneme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageButtonWord"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="23dp"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_circle_red0018" />

    <ImageButton
        android:id="@+id/imageButtonSyllable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButtonPhoneme"
        android:layout_marginBottom="48dp"
        android:layout_marginLeft="66dp"
        android:layout_toRightOf="@+id/imageButtonChoose"
        android:background="@android:color/transparent"
        android:src="@drawable/btn_circle_red0018" />

</RelativeLayout>
