<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_blue_wash" >

    <LinearLayout
        android:id="@+id/menuLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
        android:background="#99999999"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/buttonMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:background="@android:color/transparent"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"
            android:src="@drawable/btn_menu_go" />

        <ImageButton
            android:id="@+id/buttonSkip"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="700dp"
            android:background="@android:color/transparent"
            android:padding="20dp"
            android:paddingTop="50dp"
            android:src="@drawable/btn_skip" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/buttonLeo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:translationY="20dp"
        android:visibility="invisible"
        android:background="@drawable/anim_leo_justblink0001" />

    <ImageButton
        android:id="@+id/btn_game3_lemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@drawable/img_obj_lemon"
        android:visibility="visible" />

    <TextView
        android:id="@+id/txt_game_3_lemon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:text="Lemon"
        android:visibility="visible" 
        android:textColor="#fff"
        android:textSize="60sp" />

    <ImageButton
        android:id="@+id/buttonRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txt_game_3_lemon"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="80dp"
        android:layout_toRightOf="@+id/buttonLeo"
        android:background="@drawable/anim_btn_speak0001"
        android:minHeight="170dp"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/buttonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/buttonRecord"
        android:layout_marginRight="80dp"
        android:layout_toLeftOf="@+id/buttonLeo"
        android:background="@drawable/anim_btn_play0001"
        android:minHeight="170dp"
        android:visibility="visible" />

</RelativeLayout>